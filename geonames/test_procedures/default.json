          "operation": {
            "operation-type": "composite",
            "requests": [
              {
                "stream": [
                  {
                  "operation-type": "create-point-in-time",
                  "name": "open-pit",
                  "keep-alive": "100m",
                  "index": "geonames"
                  }
                ]
              }
            ]
          }
        },
        {
          "name": "paginated-search-with-pit",
          "iterations": 2,
          "operation": {
            "operation-type": "composite",
            "requests": [
              {
                "stream": [
                  {
                    "operation-type": "paginated-search",
                    "index": "geonames",
                    "pages": 50,
                    "results-per-page": 1000,
                    "target-throughput": 1,
                    "body": {
                        "query": {
                            "match_all": {}
                        },
                        "sort": [
                          {
                            "geonameid": {
                              "order": "desc"
                            }
                          }
                        ]
                    }
                  }
                ]
              }
            ]
          }
        },
        {
          "name": "delete-point-in-time",
          "operation": "delete-point-in-time"
        }
      ]
    },
