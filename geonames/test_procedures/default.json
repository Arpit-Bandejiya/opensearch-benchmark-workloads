            "include-in-reporting": false
          }
        },
        {
          "name": "search-after-without-local-pit",
          "iterations": 5,
          "operation": {
            "operation-type": "composite",
            "requests": [
              {
                "stream": [
                  {
                    "operation-type": "paginated-search",
